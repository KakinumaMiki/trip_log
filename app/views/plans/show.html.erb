<h2 class="title mt-3">
    <span class="icon has-text-danger">
    <i class="fas fa-map-pin"></i>
  </span>
  <%= @plan.name %>
</h2>

<div class="date_line"><%= @plan.date %></div>
<div class="sentence_line pt-3 ml-5">
  <div class="icon-text">
  <span class="icon has-text-success">
    <i class="fas fa-user-friends"></i>
  </span>
    <span><%= @plan.with_who %></span>
  </div>
</div>

<% @plan.schedules.order(:id).each do |schedule| %>
  <div class="category_line level-left pl-2 m-3">
    <%= schedule.name %>
  </div>
  <ul>
    <% schedule.places.each do |place| %>
      <li class="ml-4">
        <%= schedule.start_at(place)&.strftime('%H:%M') %>
        <%= link_to place.name, prefecture_place_path(place.prefecture, place), target: :_blank, rel: "noopener noreferrer" %>
      </li>
    <% end %>
  </ul>
<% end %>


<div class="memo_box mx-3">
  <div class="icon-text">
          <span class="icon has-text-danger">
            <i class="fas fa-file-signature"></i>
          </span>
    <span><%= simple_format(@plan.memo) %></span>
  </div>
</div>

