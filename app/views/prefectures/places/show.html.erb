<% if @place.gone? %>
  <p>行ったよ！</p>
<% else %>
  <p>行きたい！</p>
<% end %>
<%= @place.prefecture.name %>

<p>カテゴリー: <%= @place.category.label %></p>
<p>住所: <%= @place.address %></p>
<p>メモ: <%= @place.memo %></p>

<% memories = @place.memories %>
<% if memories.size == 1 %>
  --------------------------------
  <%= render 'prefectures/places/memories/memory_list', memory: memories.first %>
<% elsif memories.size > 1 %>
  <table>
    <tbody>
      <% memories.order(went_on: :desc).each do |memory| %>
        <tr>
          <td><%= link_to "#{memory.went_on}の記録", prefecture_place_memory_path(@prefecture, @place, memory) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div>
  <%= link_to '場所の編集', edit_prefecture_place_path(@prefecture, @place), class: 'button is-warning is-light' %>
  <%= link_to '記録の作成', new_prefecture_place_memory_path(@prefecture, @place), class: 'button is-success is-light' %>
  <% unless @place.memories.present? %>
    <%= link_to '場所の削除', prefecture_place_path(@prefecture, @place), { method: :delete, data: { confirm: '削除してよろしいですか？' }, class: 'button is-danger is-light' } %>
  <% end %>
  <div class="pt-4">
    <%= link_to '戻る', prefecture_places_path(@place.prefecture), class: 'button is-info is-light' %>
  </div>
</div>
