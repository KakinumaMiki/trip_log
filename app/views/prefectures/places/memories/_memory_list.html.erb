<div class="date_line"><%= memory.went_on %></div>
<div class="average-score mb-3">
  <div class="star-rating">
<!--    <div class="star-rating-front" style="width: <%#= @place.memories.avg_stars_percentage %>%">★★★★★</div>-->
    <div class="star-rating-front" style="width: <%= memory.star.round(1).to_f * 100 / 5 %>%">★★★★★</div>
    <div class="star-rating-back">★★★★★</div>
  </div>
  <div class="average-score-display">
<!--    （<%#= @place.memories.avg_stars %>点）-->
    （<%= memory.star %>）
  </div>
</div>

<p><%= memory.star %></p>
<p><%= memory.price %>円</p>
<p>with<%= memory.with_who %></p>
<p><%= memory.comment %></p>

<hr>
<div class="pb-4">
  <%= link_to '記録の編集', edit_prefecture_place_memory_path(memory.place.prefecture, memory.place, memory), class: 'button is-warning is-light mr-1' %>
  <%= link_to '記録の削除', prefecture_place_memory_path(memory.place.prefecture, memory.place, memory), { method: :delete, data: { confirm: '削除してよろしいですか？' }, class: 'button is-danger is-light' } %>
</div>
