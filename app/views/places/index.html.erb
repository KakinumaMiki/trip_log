<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Category</th>
      <th>Name</th>
      <th>Address</th>
      <th>With who</th>
      <th>Comment</th>
      <th>Star</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.trip_id %></td>
        <td><%= place.category_id %></td>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.with_who %></td>
        <td><%= place.comment %></td>
        <td><%= place.star %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_trip_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_trip_place_path %>
